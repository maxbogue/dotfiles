[user]
	name = Max Bogue
	email = max.bogue@pathai.com
[core]
	excludesfile = ~/.gitignore
	editor = /usr/local/bin/nvim
[alias]
	c = commit
	ca = commit -a
	cm = commit -m
	cam = commit -am
	e = commit -a --amend --no-edit

	r = reset
	r1 = reset HEAD^
	r2 = reset HEAD^^
	rh = reset --hard
	rh1 = reset HEAD^ --hard
	rh2 = reset HEAD^^ --hard

	s = status -s
	d = diff
	dm = diff origin/main
	dh = diff HEAD
	dc = diff --cached
	wd = diff --color-words
	wdd = diff --word-diff
	a = add
	co = checkout
	bm = !sh -c 'git checkout --no-track -b $0 origin/master'
	b = branch
	l = log --oneline --decorate --all --graph
	f = fetch
	p = push
	u = pull
	ur = pull --rebase
	cp = cherry-pick
	fap = fetch -ap

	gl = grep -l
	lg = !sh -c 'git ls-files | grep $0'

	su = submodule update --init --recursive
	suu = submodule foreach git pull origin master
[push]
	default = tracking
[color]
	ui = auto
[branch]
	autosetupmerge = true
	autosetuprebase = always
[http]
	cookiefile = ~/.gitcookies
[init]
	defaultBranch = main
[rerere]
	enabled = true
