alias build-run-ims-backend="cd $HOME/dev/ims/ && docker compose build server-dev tile-server-dev server-loaddata && docker compose up -d tile-server-dev && docker compose run server-loaddata && open http://localhost:8008"
alias build-run-ims-frontend="cd $HOME/dev/ims/ims-ui/ && yarn install && yarn dev"
alias build-run-ims="build-run-ims-backend && build-run-ims-frontend"
alias build-run-ims-backend-sandbox="cd $HOME/dev/ims/ && docker compose build server-dev tile-server-dev && docker compose up -d tile-server-dev && dev_utils/load-sandbox-db.sh && open http://localhost:8008"
alias build-run-ims-sandbox="build-run-ims-backend-sandbox && build-run-ims-frontend"
alias link-cc-ims="build-run-ims-backend && cd $HOME/dev/clinical-core/clinical-core-frontend/ && yarn build && yalc push && cd $HOME/dev/ims/ims-ui && yalc add clinical-core-frontend && yarn install --force && yarn dev --force"
alias link-cc-ims-sandbox="build-run-ims-backend-sandbox && cd $HOME/dev/clinical-core/clinical-core-frontend/ && yarn build && yalc push && cd $HOME/dev/ims/ims-ui && yalc add clinical-core-frontend && yarn install --force && yarn dev --force"
