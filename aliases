# For two character git commands!
alias g="git"
# To override ghost script obnoxiousness.
alias gs="g s"
# Shorter ls commands.
alias ll='ls -l'
alias la='ls -la'
# Python is just such a long word.
alias p='python'
# For searching the environment variables.
alias eg="env | grep"
# Better tmux command.
TMUXX="tmux -2 attach -d || tmux -2 new"
alias tmuxx=$TMUXX
alias v="nvim"
alias vim="nvim"
alias dc="docker-compose"

