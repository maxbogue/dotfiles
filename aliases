# For two character git commands!
alias g="git"
# To override ghost script obnoxiousness.
alias gs="git status"
# Shorter ls commands.
alias ll='ls -l'
alias la='ls -la'
# Python is just such a long word.
alias p='python'
# For searching the environment variables.
alias eg="env | grep"
# Better tmux command.
alias tmuxx='tmux -2 attach || tmux -2 new'

function search() { find . -name "$1" -type f | xargs grep $2 }

